{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mu/database/*": [
        "libs/database/src/*",
        "libs/database/src/lib/entities/*"
      ],
      "@mu/firebase": ["libs/firebase/src/index.ts"],
      "@mu/redis/*": [
        "libs/redis/src/index.ts",
        "libs/redis/src/lib/redis.service.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
